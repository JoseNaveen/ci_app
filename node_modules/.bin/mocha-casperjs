#!/bin/sh
basedir=`dirname "$0"`

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir//bin/sh" ]; then
  "$basedir//bin/sh"  "$basedir/../mocha-casperjs/bin/mocha-casperjs" "$@"
  ret=$?
else 
  /bin/sh  "$basedir/../mocha-casperjs/bin/mocha-casperjs" "$@"
  ret=$?
fi
exit $ret
